<UserControl x:Class="Athan.Avalonia.Views.DashboardView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Athan.Avalonia.Views"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"

             d:DataContext="{Binding Path=DashboardViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid Width="500" RowDefinitions="Auto 40 *">
        <Grid ColumnDefinitions="Auto * Auto" Grid.Row="0">
            <TextBlock Text="{Binding ReadableLocation}" Opacity="0.75" Grid.Column="0" />
            <TextBlock Text="{Binding ReadableDate}" Opacity="0.75" Grid.Column="2" />
        </Grid>

        <StackPanel Grid.Row="2" Spacing="10">
            <views:PrayersView DataContext="{Binding PrayersViewModel}" />

            <Button Command="{Binding NavigateToSettingsCommand}" HorizontalAlignment="Right">
                <icons:MaterialIcon Kind="CogOutline" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>