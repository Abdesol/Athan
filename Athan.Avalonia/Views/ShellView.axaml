<Window x:Class="Athan.Avalonia.Views.ShellView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        d:DataContext="{Binding Path=ShellViewModel, Source={StaticResource ViewModelLocator}}"
        Title="Athan" Icon="/Assets/avalonia-logo.ico">

    <Grid RowDefinitions="75 *">
        <TextBlock Text="{Binding Navigable.Title}" VerticalAlignment="Center"
                   Margin="25 25" FontSize="25" Grid.Row="0" />

        <ContentControl Content="{Binding Navigable}" HorizontalAlignment="Center"
                        VerticalAlignment="Center" Grid.Row="1" />
    </Grid>
</Window>