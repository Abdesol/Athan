<Window x:Class="Athan.Avalonia.Views.ShellView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        d:DataContext="{Binding Path=ShellViewModel, Source={StaticResource ViewModelLocator}}"
        Title="Athan" Icon="/Assets/avalonia-logo.ico">

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Activated">
            <InvokeCommandAction Command="{Binding CheckForInternetConnectionCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <Border Classes="container">
        <Grid RowDefinitions="Auto 10 *">
            <TextBlock Text="{Binding Navigable.Title}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0 -5 0 0" FontSize="25" FontWeight="SemiBold" Grid.Row="0" />

            <ContentControl Content="{Binding Navigable}" Grid.Row="2" />
        </Grid>
    </Border>
</Window>