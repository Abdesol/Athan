<Window x:Class="Athan.Avalonia.Views.ShellView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        d:DataContext="{Binding Path=ShellViewModel, Source={StaticResource ViewModelLocator}}"
        ExtendClientAreaToDecorationsHint="True" ExtendClientAreaTitleBarHeightHint="50"
        Title="Athan" Icon="/Assets/avalonia-logo.ico" MinWidth="720" MinHeight="480">

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Activated">
            <InvokeCommandAction Command="{Binding ActivatedCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <Grid RowDefinitions="50 *">
        <TextBlock Text="{Binding Navigable.Title, StringFormat='{}Athan â€¢ {0}'}"
                   Margin="20 15" IsHitTestVisible="False" Grid.Row="0" />

        <Border Classes="container" Grid.Row="1">
            <Grid RowDefinitions="Auto 10 *">
                <TextBlock Text="{Binding Navigable.Title}"
                           HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="25" Grid.Row="0" />

                <ContentControl Content="{Binding Navigable}" Grid.Row="2" />
            </Grid>
        </Border>
    </Grid>
</Window>