<Application x:Class="Athan.Avalonia.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Athan.Avalonia">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <local:ViewModelLocator x:Key="ViewModelLocator" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light" />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" Clicked="OpenTrayIcon">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Close" Click="CloseTrayIcon" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>